<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Store - Order Id">
    <test name="Find Purchase Order By Id - Positive Scenario 1">
        <parameter name="testCase" value="FindPurchaseOrderById_PositiveScenario1"/>
        <parameter name="environmentName" value="store"/>
        <classes>
            <class name="apiTest.PetTest">
                <methods>
                    <include name="FindPurchaseOrderById"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Find Purchase Order By Id - Negative Scenario 1">
        <parameter name="testCase" value="FindPurchaseOrderById_NegativeScenario1"/>
        <parameter name="environmentName" value="store"/>
        <classes>
            <class name="apiTest.PetTest">
                <methods>
                    <include name="FindPurchaseOrderById"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>